.content{
  width: 100%;
  height: 100vh;
  background-color: #eee;
}
.top{
  width: 95%;
  padding-left: 2%;
  padding-right: 3%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-top: 2rpx solid #777;
  height: 120rpx;
  display: flex;
  flex-direction:row ;

  align-items: center;
  align-content: center;
}
.top input{
  width: 95%;
  padding-left: 2%;
  padding-right: 2%;
  
  height: 70%;
  font-size: 95%;
  color: black; 
  border-bottom: 2rpx #777 solid;
}

.bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction:row ;
  align-items: center;
  align-content: center;

}
.bottom-left{
  width: 30%;
  padding-left: 10%;
  padding-right: 10%;
  height: 100rpx;
}
.bottom-left button{
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  color: #fff;
}
.bottom-right{
  width: 30%;
  padding-left: 10%;
  padding-right: 10%;
  height: 100rpx;
}
.bottom-right button{
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  color: #fff;
}