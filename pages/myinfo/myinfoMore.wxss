.content {
  width: 100%;
  height: 100vh;
  background-color: #eee;
}

.items {
  width: 100%;
}

.item {
  width: 100%;
  border-bottom: 20rpx #eee solid;
  padding-top: 20rpx;
}

.item-head {
  height: 120rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-radius: 20rpx;
}

.item-head-left {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-left: 5%;
}

.item-head-mid {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 5%;
  font-size: 99%;
  color: #777;
}

.xiangxia {
  width: 50rpx;
  height: 50rpx;
}

.xiangxia image {
  width: 100%;
  height: 100%;
}

.item-foot {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

.item-foot-item {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-left {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
  color: #222;
}

.item-right {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
}

.item-right input {
  width: 90%;
  height: 80%;
  background-color: #eaeaea;
  border-bottom: 1rpx solid #ddd;
}

.bottom {
  width: 100%;
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bottom-left {
  width: 50%;
  height: 100%;
}

.bottom-right {
  width: 50%;
  height: 100%;
}

.bottom-left button {
  border-radius: 20rpx;
}

.bottom-right button {
  border-radius: 20rpx;
}
