.centent{
  width: 100%;
  height: 100vh;
  
}


.top{
  width: 100%;
  height: 100rpx;
 
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  font-size: 100%;
  font-weight: bold;
  color: #111;
  letter-spacing: 2rpx;
}



.top-left{
  width: 50%;
  height: 100%;
   display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  border-right: 2rpx solid #aaa;
  border-top-left-radius: 20rpx;
}
.top-right{
  width: 50%;
  height: 100%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  border-top-right-radius: 20rpx;
}

.selectTypeColor{
  background-color: #aaa;
  
  
}

.mid{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  font-size: 92%;
  color: #444;
  font-weight: bold;
  letter-spacing: 1rpx;
  border-bottom: 2rpx #999 solid;
}
.mid-name{
  width: 30%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-time{
  width: 30%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-price{
  width: 20%;
   display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-status{
  width: 20%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}

.bottom{
  background-color: #eee;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}


.item{
  width: 100%;
  height: 80rpx;
  background-color: #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid #aaa;
  font-size: 85%;
}
.item-name{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  letter-spacing: 1rpx;
}

.item-time{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #444;

}
.item-price{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  
  color: #d00;
}
.item-status{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}