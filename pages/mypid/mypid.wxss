.centent{
  width: 100%;
  height: 100vh;
  
}


.top{
  width: 100%;
  height: 100rpx;
 
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  font-size: 100%;
  font-weight: bold;
  color: #111;
  letter-spacing: 2rpx;
}



.top-left{
  width: 50%;
  height: 100%;
   display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  border-right: 2rpx solid #aaa;
  border-top-left-radius: 20rpx;
}
.top-right{
  width: 50%;
  height: 100%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  border-top-right-radius: 20rpx;
}

.selectTypeColor{
  background-color: #aaa;
  
  
}

.mid{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  font-size: 92%;
  color: #444;
  font-weight: bold;
  letter-spacing: 1rpx;
  border-bottom: 2rpx #999 solid;
}
.mid-name{
  width: 30%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-time{
  width: 30%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-price{
  width: 20%;
   display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}
.mid-status{
  width: 20%;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
}

.bottom{
  background-color: #eee;
}


.items {
  width: 100%;
}

.item {
  width: 100%;
  padding-top: 20rpx;
}

.item-head {
  height: 100rpx;
  width: 100%;
  background-color: #eee;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-radius: 20rpx;
}

.item-head-left {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-left: 5%;
}

.item-head-mid {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 5%;
  font-size: 99%;
  color: #777;
}

.xiangxia {
  width: 50rpx;
  height: 50rpx;
}

.xiangxia image {
  width: 100%;
  height: 100%;
}

.item-foot {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

.item-foot-item {
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-left {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
  color: #222;
}

.item-right {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
}

.item-botton{
  width: 80%;
  height: 80%;
  
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: red;
  border-radius: 20rpx;
  color: #fff;
  font-size: 105%;
  letter-spacing: 5rpx;
}


.item-right input {
  width: 85%;
  padding-left: 5%;
  height: 80%;
  
  background-color: #eaeaea;
  border-bottom: 1rpx solid #ddd;
}


.backcolor1{
  background-color: #eee;
}

.backcolor2{
  background-color: #aaa;
}
.backcolor3{
  background-color: rgb(0, 255, 128);
}
