.content{
  width: 100%;
  height: 100vh;
  background-color: #eee;
}

.top{
  width: 100%;
  height: 90%;

}

.item {
  width: 100%;
  border-bottom: 20rpx #eee solid;
  padding-top: 20rpx;
}

.item-head {
  height: 96rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-radius: 20rpx;
  font-size: 100%;
  font-weight: bold;
  letter-spacing: 3rpx;
  color: #222;
}

.item-head-left {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-left: 5%;
}

.item-head-mid {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 5%;
  font-size: 99%;
  color: #777;
}


.item-foot {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

.item-foot-item {
  width: 100%;
  height: 85rpx;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-left {
  width: 19%;
  padding-left: 1%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 90%;
  color: #333;
  letter-spacing: 1rpx;
}
.item-left input{
  padding-left: 10rpx;
}

.item-right {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
}



.item-right input {
  width: 90%;
  height: 80%;
  
  background-color: #eaeaea;
  border-bottom: 1rpx solid #ddd;
}


.select{
  width: 90%;
  height: 80%;
  background-color: #eaeaea;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 95%;
}
.select-in{
  width: 540rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}





.bottom{
  width: 90%;
  margin-left: 5%;
  height: 9%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  letter-spacing: 5rpx;
  
 font-size: 110%;
  color: #fff;
  background-color: red;
}